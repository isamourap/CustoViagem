<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppMauiCustoViagem"
             x:Class="AppMauiCustoViagem.App">
    <Application.Resources>
        <ResourceDictionary>
                        <!-- Key="nome do estilo" TargetType="Qual
                componente será aplicado-->

                        <!--Property="Propriedade a ser alterada" 
                value= valor a se alteradao""-->
            <Style x:Key="plainButton" TargetType="Button">              
                <Setter Property="BackgroundColor" Value="#EEE"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>

            <Style x:Key="RedButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#8A2BE2"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="30"/>
            </Style>

            <Style x:Key="Titulo" TargetType="Label">
                <Setter Property="BackgroundColor" Value="#8A2BE2"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="30"/>
            </Style>

            <Style x:Key="LabelRotulo" TargetType="Label">
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="HorizontalTextAlignment" Value="Start"/>
                <Setter Property="VerticalOptions" Value="FillAndExpand"/>
            </Style>

            <Style x:Key="TextEntrada" TargetType="Entry">             
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="HorizontalTextAlignment" Value="Start"/>
                <Setter Property="VerticalOptions" Value="StartAndExpand"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
